{
  "name": "chat_page_backend",
  "version": "2.0.1",
  "description": "backend for chat page",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm run db:deploy && nodemon --ext ts --exec ts-node src/server.ts",
    "local-env": "cp .env.local .env && docker compose -f docker-compose-local.yml up -d --remove-orphans",
    "production": "npm run db:deploy && node dist/server.js",
    "production-env": "cp .env.production .env && docker compose -f docker-compose.yml up -d --remove-orphans",
    "build": "npm run pre-build && npx prisma generate && npm run build-ts",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate",
    "pre-build": "rimraf ./dist",
    "clean-up": "rimraf ./dist && rimraf ./logs && rimraf ./package-lock.json && rimraf ./yarn.lock && rimraf ./node_modules",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "check": "tsc --noEmit",
    "eslint": "eslint . --ext .js,.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.782.0",
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cls-hooked": "^4.2.2",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-rate-limit": "^7.2.0",
    "google-auth-library": "^9.7.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^12.16.1",
    "pg": "^8.14.1",
    "prisma": "^6.5.0",
    "punycode": "^2.3.1",
    "qs": "^6.11.2",
    "redis": "^4.6.13",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cls-hooked": "^4.3.9",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/newrelic": "^9.14.3",
    "@types/newrelic__winston-enricher": "^0.1.5",
    "@types/node": "^22.13.17",
    "@types/redis": "^4.0.10",
    "@types/request": "^2.48.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
