{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "types": ["node", "ws", "express"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // explain -> this line
    }
  },
  "include": ["src"],
  "exclude": [".templates"]
}
